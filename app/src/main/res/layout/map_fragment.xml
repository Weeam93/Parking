<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="garage"
            type="com.example.weeamawad.parking.entities.GarageViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mapRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Black"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="map" />

            </LinearLayout>

            <com.arlib.floatingsearchview.FloatingSearchView
                android:id="@+id/floating_search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:floatingSearch_dismissOnOutsideTouch="true"
                app:floatingSearch_leftActionMode="showSearch"
                app:floatingSearch_menu="@menu/menu_items"
                app:floatingSearch_searchBarMarginLeft="5dp"
                app:floatingSearch_searchBarMarginRight="5dp"
                app:floatingSearch_searchBarMarginTop="5dp"
                app:floatingSearch_searchHint="Search..."
                app:floatingSearch_showSearchKey="false" />

            <RelativeLayout
                android:id="@+id/OuterBottomPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/LightBlack"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/bottomPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="60dp"
                    android:divider="@drawable/mydivider"
                    android:dividerPadding="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/mapPlaceName"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text="@{garage.name}"
                        android:textColor="@color/White"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/mapPlaceAddress"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text="@{garage.address}"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:id="@+id/mapAdditionInfoPanel"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mapDistanceInfo"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text='@{String.valueOf(garage.distance)+" Miles"}'
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/mapPriceInfo"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:padding="5dp"
                            android:text='@{"$ "+ String.valueOf(garage.price)}'
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/mapOpeningsInfo"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text='@{String.valueOf(garage.availibleSpots) + " Openings"}'
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_favoriteOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="2dp"
                        android:src="@android:drawable/btn_star_big_off"
                        app:visibility="@{!garage.isFavorite ? View.VISIBLE : View.GONE}" />

                    <ImageButton
                        android:id="@+id/ib_favoriteOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="2dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:visibility="@{garage.isFavorite ? View.VISIBLE : View.GONE}" />
                    android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/launchNavigationBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="2dp"
                        android:src="@drawable/directions_icon" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>
</layout>




