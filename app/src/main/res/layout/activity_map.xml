<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:tag="map" />

    <LinearLayout
        android:id="@+id/searchPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_corners"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <AutoCompleteTextView
            android:id="@+id/autoComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/search_hint" >

            <requestFocus />
        </AutoCompleteTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchPanel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" >

        <Button
            android:id="@+id/findparkingbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/findParking_btn_txt" />

        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/listButton_description"
            android:src="@drawable/menu_list" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/OuterBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_corners"
        android:orientation="horizontal"
        android:visibility="visible" >
"

        <LinearLayout
            android:id="@+id/bottomPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:divider="@drawable/mydivider"
            android:dividerPadding="10dp"
            android:orientation="vertical"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/mapPlaceName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                android:text="Parking Name"
                android:textColor="@color/Black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mapPlaceAddress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="5dp"
                android:text="2685 West Flint St. Chandler Az 85224"
                android:textColor="@color/Black"
                android:textSize="17sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/mapAdditionInfoPanel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mapDistanceInfo"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="0.8 miles"
                    android:textColor="@color/Black"
                    android:textSize="17sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/mapPriceInfo"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_weight=".5"
                    android:padding="5dp"
                    android:text="$15"
                    android:textColor="@color/Black"
                    android:textSize="17sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/mapOpeningsInfo"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="10 Openings"
                    android:textColor="@color/Black"
                    android:textSize="17sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/launchNavigationBtn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:src="@drawable/directions_icon" />
    </LinearLayout>

</RelativeLayout>