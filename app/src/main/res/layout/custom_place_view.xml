<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rouned_corner_name"
        android:padding="3dp"
        android:text="Parking Name"
        android:textColor="@color/secondary"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/placeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:minLines="1"
        android:padding="1dp"
        android:text="2685 West Flint St. Chandler Az 85224"
        android:textSize="17sp"
        android:textStyle="italic"></TextView>

    <!-- this one -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/innerLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placeDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:padding="1dp"
                android:text="0.7 mil"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:id="@+id/placePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:padding="1dp"
                android:text="$20"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:id="@+id/placeSpots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_bottom"
                android:padding="1dp"
                android:text="25"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:src="@drawable/directions_icon">

        </ImageButton>
    </LinearLayout>

</LinearLayout>